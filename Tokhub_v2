  <script>
    // Set dynamic date label
    const dateElem = document.getElementById('today-date');
    const options = { year: 'numeric', month: 'long', day: 'numeric' };
    const today = new Date();
    dateElem.textContent = "Today's Picks ‚Äì " + today.toLocaleDateString('en-US', options);

    const categories = {
      news: [
        "https://www.tiktok.com/@bbcnews",
        "https://www.tiktok.com/@cnn",
        "https://www.tiktok.com/@reuters",
        "https://www.tiktok.com/@nyt",
        "https://www.tiktok.com/@aljazeeraenglish",
        "https://www.tiktok.com/@skynews",
        "https://www.tiktok.com/@underthedesknews"
      ],
      tech: [
        "https://www.tiktok.com/@wired",
        "https://www.tiktok.com/@theverge",
        "https://www.tiktok.com/@techcrunch",
        "https://www.tiktok.com/@aitechhub",
        "https://www.tiktok.com/@aimindset",
        "https://www.tiktok.com/@lexfridman",
        "https://www.tiktok.com/@twominutepapers"
      ],
      funny: [
        "https://www.tiktok.com/@comedycentral",
        "https://www.tiktok.com/@failarmy",
        "https://www.tiktok.com/@kallmekris",
        "https://www.tiktok.com/@mrbeast",
        "https://www.tiktok.com/@itsjojosiwa",
        "https://www.tiktok.com/@iamtabithabrown",
        "https://www.tiktok.com/@justmaiko"
      ]
    };

    function getRandom(arr) {
      return arr[Math.floor(Math.random() * arr.length)];
    }

    document.getElementById("refresh").addEventListener("click", function () {
      const openList = [
        getRandom(categories.news),
        getRandom(categories.tech),
        getRandom(categories.funny)
      ];
      openList.forEach(url => window.open(url, "_blank", "noopener,noreferrer"));
    });

    document.addEventListener("DOMContentLoaded", function() {
      function splitLinks(text) {
        return text.split(/[\s,]+/).map(u => u.trim()).filter(u => u.length > 0);
      }

      document.getElementById('openAll').addEventListener('click', function() {
        const txt = document.getElementById('links').value;
        const list = splitLinks(txt).slice(0, 10);
        if (!list.length) {
          alert('Paste at least one TikTok URL first.');
          return;
        }
        list.forEach(url => window.open(url, '_blank', 'noopener,noreferrer'));
      });

      document.getElementById('openOne').addEventListener('click', function() {
        const txt = document.getElementById('links').value;
        const list = splitLinks(txt);
        if (!list.length) {
          alert('Paste a TikTok URL first.');
          return;
        }
        window.open(list[0], '_blank', 'noopener,noreferrer');
      });
    });
  </script>
