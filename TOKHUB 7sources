  <script>
    function splitLinks(text) {
      return text.split(/[\s,]+/).map(u => u.trim()).filter(u => u.length);
    }
    document.getElementById('openAll').addEventListener('click', () => {
      const txt = document.getElementById('links').value;
      const list = splitLinks(txt).slice(0, 10);
      if (!list.length) {
        alert('Paste at least one TikTok URL first.');
        return;
      }
      let opened = 0;
      for (const u of list) {
        try {
          window.open(u, '_blank');
          opened++;
        } catch (e) {
          console.warn('blocked', e);
        }
      }
      if (opened === 0) {
        alert('Browser blocked pop-ups. Try opening one by one.');
      }
    });
    document.getElementById('openOne').addEventListener('click', () => {
      const txt = document.getElementById('links').value;
      const list = splitLinks(txt);
      if (!list.length) {
        alert('Paste a TikTok URL first.');
        return;
      }
      window.open(list[0], '_blank');
    });
  </script>
